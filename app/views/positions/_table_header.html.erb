<tr>
  <th class="text-start col-1">Symbol</th>
  <th class="text-center col-1">
    <%= link_to positions_path(
          sort: 'maturity_date',
          sort_direction: (params[:sort] == 'maturity_date' && params[:sort_direction] == 'asc') ? 'desc' : 'asc'
        ),
        class: "text-dark text-decoration-none" do %>
      Maturity
      <% if params[:sort] == 'maturity_date' %>
        <i class="fas <%= params[:sort_direction] == 'asc' ? 'fa-sort-down' : 'fa-sort-up' %>"></i>
      <% else %>
        <i class="fas fa-sort text-muted"></i>
      <% end %>
    <% end %>
  </th>
  <th class="text-start col-1">Account</th>
  <th class="text-end col-1">Quantity</th>
  <th class="text-end col-1">Last Price</th>
  <th class="text-end col-2">Current Value</th>
  <th class="text-end col-1">Gain/Loss %</th>
  <th class="text-end col-2">Cost Basis</th>
  <th class="text-center col-1">Date</th>
</tr>